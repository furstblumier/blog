---
import { SITE_TITLE, SITE_LOGO } from "../config";
import { Icon } from 'astro-icon/components'
import Typewriter from './Typewriter.astro'

interface Props {
  quote?: string
}

const { quote } = Astro.props

---

<header
  class="flex items-center justify-between py-6 max-w-5xl px-3 md:px-6 mx-auto"
>
  {
    SITE_LOGO ? (
      <a href="/">
        <div class="flex flex-row items-center max-w-1/2">
          <img src={SITE_LOGO} alt={SITE_TITLE} class="w-30 h-30 pr-12" />
          <Typewriter quote={quote}/>
        </div>
      </a>
    ) : (
      <div class="flex flex-row items-center">
        <span class="text-xl font-bold">{SITE_TITLE}</span>
      </div>
    )
  }  
  <nav>
    <ul class="flex items-center justify-center space-x-4 text-dark-gray-500">
      <li>
        <a class="hover:text-dark-gray-200" href="/">Home</a>
      </li>
      <li>
        <a class="hover:text-dark-gray-200" href="/blog">Posts</a>
      </li>
      <li>
        <a class="hover:text-dark-gray-200" href="https://gallery.furst.blue">Gallery</a>
      </li>
      <li>
        <a href='https://ko-fi.com/B0B71TINB' target='_blank'>
          <Icon class="size-6 md:size-8 ease-in-out hover:text-dark-gray-200 hover:scale-110" name="cib:ko-fi" />
        </a>
      </li>
    </ul>
  </nav>
</header>
