---
import { SITE_TITLE, SITE_LOGO } from "../config";
---

<header
  class="flex items-center justify-between py-6 max-w-5xl px-3 md:px-6 mx-auto"
>
  {
    SITE_LOGO ? (
      <img src={SITE_LOGO} alt={SITE_TITLE} class="w-30 h-30" />
    ) : (
      <span class="text-xl font-bold">{SITE_TITLE}</span>
    )
  }
  <nav>
    <ul class="flex items-center justify-center space-x-4">
      <li>
        <a href="/">Home</a>
      </li>
      <li>
        <a href="/blog">Posts</a>
      </li>
      <li>
        <a href="https://furst.blue" target="_blank">Art Gallery</a>
      </li>
      <li>
        <a href='https://ko-fi.com/B0B71TINB' target='_blank'><img height='36' style='border:0px;height:36px;' src='https://storage.ko-fi.com/cdn/kofi5.png?v=3' alt='Buy Me a Coffee at ko-fi.com' /></a>
      </li>
    </ul>
  </nav>
</header>
